@model UsuarioModel
@{
    ViewData["Title"] = "Cadastro de Usuários";
}

<div class="text-center">
    <h1 class="display-4">Cadastro de usuários</h1>
</div>

<form asp-controller="Usuario" asp-action="CriarUsuario" method="post">
    <div class="form-group">
        <label for="tipoImovel">Nome</label>
        <input type="text" asp-for="Nome" class="form-control" placeholder="Digite o nome">
        @Html.ValidationMessageFor(x => x.Nome)
    </div>

    <div class="form-group">
        <label for="Sobrenome">Sobrenome</label>
        <input type="text" asp-for="Sobrenome" class="form-control" placeholder="Digite o sobre nome">
        @Html.ValidationMessageFor(x => x.Sobrenome)
    </div>

    <div class="form-group">
        <label for="Email">Email</label>
        <input type="text" asp-for="Email" class="form-control" placeholder="Digite E-mail">
        @Html.ValidationMessageFor(x => x.Email)
    </div>
    <div class="form-group">
        <label for="PetModelId">Meu Pet</label>
        <input type="text" asp-for="PetModelId" class="form-control" placeholder="Digite o nome do Pet">
        @Html.ValidationMessageFor(x => x.PetModelId)
    </div>

    <button type="submit" class="btn btn-primary btn-block">Adicionar</button>
    <a class="btn btn-secondary btn-block" asp-controller="Usuario" asp-action="IndexUsuario" role="button">Voltar</a>
</form>

